{# templates/login/index.html.twig #}
{% extends 'layout.html.twig' %}

{# ... #}
{% block title %}Connexion{% endblock %}
{% block main %}
    <main>
        <div class="container p-3 align-items-center">
            <form action="{{ path('app_login') }}" method="post" class="row g-3 p-3">
                <div class="col-md-12 p-4 justify-content-center rounded shadow" style="background-color: #f0c542; color: #24393e;">
                    <div class="row text-center">
                        <div class="col">
                            <i class="bi bi-person-circle"></i>
                            <p class="fs-5">Connectez vous Ã  votre espace pro</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="username" class="form-label">Adresse email</label>
                            <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control">
                        </div>
                    </div>
                    <div class="row pt-4">
                        <div class="col">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col">
                            <label class="form-check-label">
                                <input type="checkbox" name="_remember_me" checked class="form-check-input"/>
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary">Connexion</button>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </main>
{% endblock %}
{% block footer %}
{% endblock %}
