{% extends 'layout.html.twig' %}

{% block title %}Liste de nos véhicules{% endblock %}

{% set queryParams = app.request.query.all %}
{% block main %}
    <script>
        window.onload = function () {
            const form = document.querySelector('form');
            const pageField = document.querySelector('#page')
            form.addEventListener('change', function () {
                pageField.value = '1';
            });
            const resetButton = document.querySelector('#buttonReset')

            resetButton.addEventListener('click', function () {
                form.querySelectorAll('input[type=number]').forEach(elmt => {
                    elmt.setAttribute('value', null);
                })
            })
        }
    </script>
    <main class="container">
        <div class="text-center">
            <h1>Nos voitures d'occasion</h1>
        </div>
        <div class="text-center align-items-center" style="background-color: #f0c542; color: #24393e;">
            <div class="p-3" style="background-color: #24393e; color:#f0c542; ">
                <div class="col">
                    <h4>Filtrer mes recherches</h4>
                </div>
                {% set map_fields = {
                    'prixMin': 'Prix Min',
                    'prixMax': 'Prix Max',
                    'anneeMin': 'Année Min',
                    'anneeMax': 'Année Max',
                    'kmMin': 'Kilomètrage Min',
                    'kmMax': 'Kilomètrage Max',
                } %}
                {{ form_start(form) }}
                <div class="row text-start">
                    {% for row in map_fields|batch(2, '-', true) %}
                        <div class="col">
                            <div>
                                <p>{{ row|last|split(' ')|first }}</p>
                            </div>
                            <div class="row">
                                {% for fieldName, fieldLabel in row %}
                                    {% set prixMin = attribute(form, fieldName) %}
                                    <div class="col">
                                        <label
                                                for={{ field_name(prixMin) }}
                                                class="form-label"
                                                hidden
                                        >
                                            Prix Min
                                        </label>
                                        <input
                                                type="number"
                                                class="form-control"
                                                id="{{ field_name(prixMin) }}"
                                                name="{{ field_name(prixMin) }}"
                                                placeholder="{{ fieldLabel }}"
                                                value="{{ field_value(prixMin) }}"
                                        >
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                    <div class="p-3 text-center">
                        <button type="reset" id="buttonReset" value="reset" class="btn btn-primary"
                                style="width: 250px;">Réinitialiser la recherche
                        </button>
                        <button type="submit" value="submit" class="btn btn-primary" style="width: 250px;">Filtrer la
                            recherche
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            {{ include('vehicule/_vehicules.html.twig', { route_name: 'app_vehicule_show', button_name: 'En savoir plus'}) }}
            <div class="row g-3 p-3">
                {% for vehicule in vehicules %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card">
                            {% set picture_path = attribute(vehicule.thumbnail, 'filename') is defined ? 'uploads/photos/' ~ vehicule.thumbnail.filename : 'assets/placeholder.png' %}
                            <img src="{{ asset(picture_path) }}" class="card-img-top shadow border-0"
                                 style="aspect-ratio: 4 / 3;" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ vehicule.marque }} {{ vehicule.modele }}</h5>
                            </div>
                            <ul class="list-group list-group-flush text-start">
                                <li class="list-group-item d-flex">
                                    <span class="w-50" style="width: 50%;">Km: {{ vehicule.kilometre }}</span>
                                    <span class="w-50" style="width: 50%;">Type: {{ vehicule.carburant.type }}</span>
                                </li>
                                <li class="list-group-item d-flex">
                                    <span class="w-50">Année: {{ vehicule.annee }}</span>
                                    <span class="w-50">Boîte: {{ vehicule.boite }}</span>
                                </li>
                                <li class="list-group-item d-flex">
                                    <span class="w-50">Puissance: {{ vehicule.puissance }}cv</span>
                                    <span class="w-50">Prix: <strong>{{ vehicule.prix }} €</strong></span>
                                </li>
                            </ul>
                            <div class="py-2">
                                <a href="{{ path('app_vehicule_show', {'slug': vehicule.slug}) }}">
                                    <button class="btn btn-primary">En savoir plus</button>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                <span class="fs-3">Pas de véhicule disponible.</span>
                {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div>
                {% if previous >= 1 %}
                    <a href="{{ path('app_vehicule_index_pro', queryParams|merge({page: previous})) }}" class="btn btn-primary">Précedente</a>
                {% endif %}
            </div>
            <div>
                {% if next != 0 %}
                    <a href="{{ path('app_vehicule_index_pro', queryParams|merge({page: next})) }}" class="btn btn-primary">Suivante</a>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
