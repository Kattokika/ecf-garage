{% extends 'layout_pro.html.twig' %}
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('uploader') }}
 {% endblock %}

 {% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('uploader') }}
 {% endblock %}

{% block title %}Ajouter photos au Véhicule{% endblock %}

{% block content %}
    <h1 class="text-center">Ajouter des photos au véhicule</h1>
    <div class="row pt-3">
        <div class="col-lg-6">
            <h3 class="text-center pb-4">Téléverser les photos</h3>
            <div class="d-flex justify-content-center w-100">
                <div id="uppy-dashboard"></div>
            </div>
        </div>
        <div class="col-lg-6">
            <h3 class="text-center pb-4">Aperçu des photos</h3>
            <div class="row g-3">
                {% for photo in vehicule.photos %}
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/photos/' ~ photo.filename) }}" alt="test" width="100%" class="shadow object-fit-cover" style="aspect-ratio: 4 / 3;"/>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-12 text-center pt-4">
            <a href="{{ path('app_vehicule_index_pro') }}" class="btn btn-primary" style="min-width: 160px;">Finaliser</a>
        </div>
    </div>
    {{ form_start(form) }}
        {{ form_row(form._token) }}
        {{ form_row(form.vehicule) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}
