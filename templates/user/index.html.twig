{% extends 'layout_pro.html.twig' %}

{% block title %}Liste Employés{% endblock %}

{% block content %}
<h1 class="text-center p-3">Liste des employés</h1>
<div class="d-md-flex justify-content-end">
    <a href="{{ path('app_new_user') }}" class="btn btn-primary">Ajouter un employé</a>
</div>
<div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Poste</th>
            <th scope="col">Mail</th>
            <th scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.prenom }}</th>
                <td>{{ user.poste }}</td>
                <td>{{ user.email }}</td>
                <td class="d-md-flex justify-content-md-end"><a href="{{ path('app_user', { id: user.id }) }}" class="btn btn-primary">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
