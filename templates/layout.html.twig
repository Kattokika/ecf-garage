{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('garage') }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('garage') }}
{% endblock %}

{% block body %}
    {% block header %}
        {% set menu_entries = {
            'app_homepage': 'Accueil',
            'app_vehicule_index': 'Nos v√©hicules',
            'app_avis_client': 'Laisser un avis',
            'app_message_new': 'Nous contacter',
        } %}
        <header style="height: 100px;">
            <nav class="navbar justify-content-between w-100" style="background-color: #24393e;">
                <a class="logo ps-3" href="{{ path('app_homepage') }}">
                    <img src="{{ asset('assets/logo-garage.png') }}" alt="logo-garage" height="100"/>
                </a>
                <div>
                    <div class="nav-links fs-5">
                        <ul class="mb-0 d-flex align-items-center">
                            {% for page_name, label in menu_entries %}
                                <li>
                                    <a class="nav-link {% if app.request.attributes.get('_route') starts with page_name %}active{% endif %}" aria-current="page" href="{{ path(page_name) }}">
                                        {{ label }}
                                    </a>
                                </li>
                            {% endfor %}
                            <li>
                                <a class="btn btn-secondary btn" href="{{ path('app_login') }}" role="button">
                                    Espace Pro
                                </a>
                            </li>
                        </ul>
                    </div>
                    <button alt="Menu" type="button" class="menu" style="color: #f0c542;" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="toggle navigation">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-three-dots-vertical" viewbox="0 0 16 16">
                            <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                        </svg>
                    </button>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block main %}
        <main class="container-fluid p-0">
        </main>
    {% endblock %}
    {% block footer %}

        <footer class="footer-page row py-4 mx-0 border-top">
            <div class="col-sm-12 col-lg-4 py-sm-2 text-center">
                <a class="logo" href="{{ path('app_homepage') }}">
                    <img src="{{ asset('assets/logo-garage.png') }}" style="width: 150px;" alt="logo-garage"/>
                </a>
            </div>

            <div class="col-sm-12 col-lg-4 py-sm-2 text-center">
                <div class="w-100">
                    <i class="bi bi-telephone"></i>
                    <p>05 71 52 01 86</p>
                </div>
                <div class="w-100">
                    <i class="bi bi-geo-alt"></i>
                    <p><span>74 rue de Georges</span>
                        31000 Toulouse</p>
                </div>
                <div class="w-100">
                    <i class="bi bi-envelope"></i>
                    <p>contact@garagevparrot.fr</p>
                </div>
            </div>

            <div class="col-sm-12 col-lg-4 text-center justify-content-center ">

                    {{ render(controller('App\\Controller\\HorairesController::horaires')) }}

            </div>
        </footer>
    {% endblock %}
{% endblock %}
